{
	"compilerOptions": {
		"target": "es2021",
		"module": "commonjs",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"skipLibCheck": true,
		"outDir": "./build",
		"rootDir": "./",
		"noEmit": false,
		"typeRoots": ["custom"],
		"baseUrl": "./",
		"allowJs": true,
		"strictNullChecks": true,
		"strict": true,
		"paths": {
			"interfaces/*": ["src/interfaces/*"],
			"enums/*": ["src/enums/*"],
			"utils/*": ["src/utils/*"],
			"db/*": ["src/db/*"]
		}
	},
	"ts-node": {
		"require": ["tsconfig-paths/register"]
	},
	"exclude": ["ecosystem.config.js", "build"]
}
